{
  "AllowedHosts": "*",
  // Basic application informations
  "AppInfo": {
    "DeveloperSite": "#",
    "FullName": "AdminLTE",
    "ShortName": "LTE",
    "Version": "1.00",
    "TitleDelimiter": "/"
  },
  "ConnectionStrings": {
    //"FealConnection": "Server=DESKTOP-S6RO4OH\\SQLEXPRESS;Database=FealDb;Trusted_connection=true",
    "FealConnection": "Server=.;Database=FealDb;Trusted_connection=true"
  },
  // Identity authentication settings
  "Identity": {
    "DefaultOptions": {
      "LockoutEnabled": "true"
    },
    // Lockout settings
    "LockoutOptions": {
      "MaxFailedAccessAttempts": "6",
      "DefaultLockoutTimeSpan": "0.00:10:00.0000", // Lock account for 10 minutes
      "AllowedForNewUsers": "true"
    },
    // Password settings
    "PasswordOptions": {
      "RequireDigit": "true",
      "RequireLowercase": "true",
      "RequireNonAlphanumeric": "true",
      "RequireUppercase": "true",
      "RequiredLength": "6",
      "RequiredUniqueChars": "1"
    },
    // Sign in settings
    "SignInOptions": {
      "RequireConfirmedEmail": "true",
      "RequireConfirmedPhoneNumber": "false"
    },
    // User settings
    "UserOptions": {
      "RequireUniqueEmail": "true",
      "AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+"
    }
  },
  "CookieAuthenticationOptions": {
    "Cookie": {
      "Name": "Vlado",
      "HttpOnly": "true",
      "Expiration": "30.00:00:00.0000"
    },
    "ExpireTimeSpan": "3.00:00:00.0000",
    "AccessDeniedPath": "/Account/AccessDenied",
    "LoginPath": "/Accountasdasdas/Login",
    "LogoutPath": "/Account/Logout",
    "SlidingExpiration": "true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  }
}

