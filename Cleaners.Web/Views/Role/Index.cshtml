@inject IViewLocalizer Localizer
@{
    ViewBag.PageTitle = Localizer[ResourceKeys.Roles];
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-danger btn-flat" asp-route="@RoleRoutes.Create" data-toggle="modal" data-target="#modal-container">
                    <i class="fa fa-plus-square margin-r-5"></i>
                    @Localizer[ResourceKeys.Add]
                </a>
            </div>
            <ajax-loader class="box-body" asp-ajax-route="@RoleRoutes.Data" asp-ajax-blockui="true"></ajax-loader>

        </div>
    </div>
</div>