@model Cleaners.Web.Models.Users.UserUpdateModel
@inject IViewLocalizer Localizer
@{
    ViewBag.PageTitle = Localizer[ResourceKeys.Users];
}

<script src="~/js/select2/select2.js"></script>
<script src="~/js/select2/locales/@Html.Raw(CultureInfo.CurrentCulture.ToString() + ".js")"></script>

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">@Localizer["update.user"]</h3>
            </div>
            <div class="box-body">
                <form asp-action="Update" class="form-horizontal">
                    <partial name="_ValidationSummary" />
                    <input asp-for="Id" type="hidden" />
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    <label asp-for="FirstName" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="FirstName" class="form-control">
                                <span asp-validation-for="FirstName" class="text-error"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    <label asp-for="LastName" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="LastName" class="form-control">
                                <span asp-validation-for="LastName" class="text-error"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    <label asp-for="Email" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control">
                                <span asp-validation-for="Email" class="text-error"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    <label asp-for="UserName" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="UserName" class="form-control">
                                <span asp-validation-for="UserName" class="text-error"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <input asp-for="PhoneNumber" class="form-control">
                                <span asp-validation-for="PhoneNumber" class="text-error"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    <label asp-for="SelectedRoles" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <select asp-for="SelectedRoles" asp-items="Model.Roles" class="form-control select2">
                                    @foreach (var item in Model.SelectedRoles)
                                    {
                                        <option value="@item" selected>@item</option>
                                    }
                                </select>
                                <span asp-validation-for="SelectedRoles" class="text-error"></span>
                                <div asp-if="!Model.Roles.Any()" class="text-warning">@Localizer["empty.select.list.warning"]                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    <label asp-for="IsActive" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="IsActive"> (@Localizer["account.active.info"])
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    <label asp-for="LockoutEnabled" class="control-label"></label>
                                </div>
                            </div>
                            <div class="col-sm-9">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="LockoutEnabled"> (@Localizer["lockout.enabled.info", 2])
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-default btn-flat">
                            <i class="fa fa-times margin-r-5"></i>@Localizer[ResourceKeys.Cancel]
                        </button>
                        <button type="submit" class="btn btn-danger pull-right btn-flat">
                            <i class="fa fa-save margin-r-5"></i>@Localizer[ResourceKeys.Save]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $('#@Html.IdFor(m => m.SelectedRoles)').select2({
        placeholder: '@Localizer["select.roles"]',
        language: '@CultureInfo.CurrentCulture.ToString()'
    });
</script>