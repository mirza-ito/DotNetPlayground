@model UserResetPasswordModel
@inject IViewLocalizer Localizer
<div id="modal-block">
    <div class="modal-header">
        <h4 class="modal-title">@Localizer[ResourceKeys.ResetPassword]</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true"></span>
        </button>
    </div>
    <form asp-action="ResetPassword" data-ajax="true" data-ajax-update="modal-block">
        <div class="modal-body">
            <input asp-for="Id" />
            <partial name="_ValidationSummary" />
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control m-input" />
                <span asp-validation-for="NewPassword" class="text-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirmed"></label>
                <input asp-for="PasswordConfirmed" class="form-control m-input" />
                <span asp-validation-for="PasswordConfirmed" class="text-error"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button data-dismiss="modal" class="btn btn-default btn-flat pull-left">
                <i class="fa fa-times margin-r-5"></i>@Localizer[ResourceKeys.Cancel]
            </button>
            <button type="submit" class="btn btn-danger pull-right btn-flat">
                <i class="fa fa-save margin-r-5"></i>@Localizer[ResourceKeys.Submit]
            </button>
        </div>
    </form>
</div>